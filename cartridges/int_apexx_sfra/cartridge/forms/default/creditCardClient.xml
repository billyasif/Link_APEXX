<?xml version="1.0"?>
<form xmlns="http://www.demandware.com/xml/form/2008-04-19">

    <field formid="paymentMethodClient" type="string" mandatory="true" />


    <field formid="cseCardOwner" label="label.input.creditcard.owner" type="string" mandatory="true" binding="cseCardOwner"
           max-length="16" missing-error="error.message.required" />
           
    <field formid="cseCardNumber" label="label.input.creditcard.number" type="string" mandatory="true" binding="cseCardNumber"
           max-length="20" missing-error="payment.card.number.missing" parse-error="error.message.required" />

    <field formid="cseExpirationMonth" label="label.input.payment.expirationmonth" type="string" mandatory="true" binding="cseExpirationMonth"
           missing-error="payment.card.month.missing" value-error="address.field.invalid" />

    <field formid="cseExpirationYear" label="label.input.payment.expirationyear" type="string" mandatory="true" binding="cseExpirationYear"
           max-length="16"   missing-error="payment.card.year.missing" />
           
    <field formid="cseSecurityCode" label="profile.securitycode" type="string" mandatory="true" binding="cseSecurityCode"
           max-length="4" missing-error="error.card.info.missing.securityCode" />        

    <field formid="cseEncryptedData" label="label.input.creditcard.owner" type="string" mandatory="true" binding="cseEncryptedData" /> 
           
           

</form>
